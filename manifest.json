{
  "manifest_version": 3,
  "name": "OfferTrail",
  "version": "0.1.0",
  "description": "Save job postings as you browse!",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Internship Tracker",
    "default_popup": "popup.html"
  }
}
